{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "outDir": "./out",
    "rootDir": "./src",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "strict": true,
    "incremental": true,
    "moduleResolution": "bundler"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/test", ".rollup.cache"]
}
